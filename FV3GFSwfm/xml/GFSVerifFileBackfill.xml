<!-- get the ANX files needed for verification -->
  <task name="ANX_verif_file_backfill" cycledefs="acc_vx" maxtries="1">
    <command>&SCRIPTS;/anx_verif_file_backfill.ksh</command>
    <account>&PROJECT;</account>
    <cores>1</cores>
    <partition>&SERVICE;</partition>
    <walltime>00:10:00</walltime>
    <jobname><cyclestr>ANXFile_@H</cyclestr></jobname>
    <join><cyclestr>&FV3GFS_LOG;/gfsfile/ANXFile_@Y@m@d@H_&MODL;.log</cyclestr></join>
    <envar><name>WFM</name><value>1</value></envar>
    <envar><name>GLOBAL_RUN</name><value>&FV3GFS_RUN;/&PSLOT;</value></envar>
    <envar><name>ANX_DIR</name><value>&GFS_VERIF_DIR;</value></envar>
    <envar><name>HPSS_DIR</name><value><cyclestr>/BMC/fdr/Permanent/@Y/@m/@d/grib/ftp/7/0/81/0_259920_0</cyclestr></value></envar>
    <envar><name>GFS_VERIF_RETRO_DIR</name><value><cyclestr>&GFS_VERIF_RETRO_DIR;/grib2/@Y/</cyclestr></value></envar>
    <envar><name>HPSS_FILE</name><value><cyclestr>@Y@m@d@H00.zip</cyclestr></value></envar>
    <envar><name>HOUR</name><value><cyclestr>@H</cyclestr></value></envar>
    <envar><name>yyyymmddhhmm</name><value><cyclestr>@Y@m@d@H@M</cyclestr></value></envar>
    <envar><name>ANX_MODEL</name><value>GFS</value></envar>
    <envar><name>CNVGRIB</name><value>&CNVGRIB;</value></envar>
    <!--
    <dependency>
      <datadep age="300"><cyclestr>&FV3GFS_RUN;/&PSLOT;/gfs.@Y@m@d/@H/&FV3GFS_POST_DIR;/@y@j@H@M0000.g2</cyclestr></datadep>
    </dependency>
-->
  </task>
