  <task name="purge_#T#" maxtries="3">
    <command>&SCRIPTS;/purge_fv3gfs.ksh</command>
    <account>&PROJECT;</account>
    <cores>1</cores>
    &PARTITION_JET;
    <walltime>00:05:00</walltime>
    <jobname>purge#T#</jobname>
    <join><cyclestr>&FV3GFS_LOG;/purge/purge#T#_@Y@m@d@H.log</cyclestr></join>
    <envar><name>FV3GFS_RUN</name><value>&FV3GFS_RUN;</value></envar>
    <envar><name>PSLOT</name><value>&PSLOT;</value></envar>
    <envar><name>CDUMP</name><value>&CDUMP;</value></envar>
    <envar><name>yyyymmdd</name><value><cyclestr>@Y@m@d</cyclestr></value></envar>
    <envar><name>hh</name><value><cyclestr>@H</cyclestr></value></envar>
    <envar><name>T</name><value>#T#</value></envar>
    <dependency>
        <datadep minsize="1b" age="300"><cyclestr>&FV3GFS_RUN;/&PSLOT;/&CDUMP;.@Y@m@d/@H/gfs.t@Hz.pgrb2.0p50.f#T#</cyclestr></datadep>
    </dependency>
  </task>
