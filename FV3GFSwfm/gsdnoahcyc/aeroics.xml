   <var name="member">001 002 003 004 005 006 007 008 009 010 011 012 013 014 015 016 017 018 019 020 021 022 023 024 025 026 027 028 029 030 031 032 033 034 035 036 037 038 039 040 041 042 043 044 045 046 047 048 049 050 051 052 053 054 055 056 057 058 059 060 061 062 063 064 065 066 067 068 069 070 071 072 073 074 075 076 077 078 079 080 </var> 
-->
   <var name="member">001 002 </var>
   <task name="enkfaero#member#" maxtries="&MAXTRIES;">

	<command>&JOBS_DIR;/aeroic.sh</command>

	<jobname><cyclestr>&PSLOT;_enkfaeroic_@H</cyclestr></jobname>
	<account>&ACCOUNT;</account>
	<queue>&QUEUE_AEROIC_GFS;</queue>
	&RESOURCES_AEROIC_GFS;
	<walltime>&WALLTIME_AEROIC_GFS;</walltime>
	<native>&NATIVE_AEROIC_GFS;</native>

	<join><cyclestr>&ROTDIR;/logs/@Y@m@d@H/enkfaeroic#member#.log</cyclestr></join>

	<envar><name>HOMEgfs</name><value>&HOMEgfs;</value></envar>
	<envar><name>EXPDIR</name><value>&EXPDIR;</value></envar>
	<envar><name>ROTDIR</name><value>&ROTDIR;</value></envar>
	<envar><name>CDATE</name><value><cyclestr>@Y@m@d@H</cyclestr></value></envar>
	<envar><name>AEROCASE</name><value>&ECASE;</value></envar>
	<envar><name>FV3ICS_DIR</name><value><cyclestr>&ICSDIR;/&ECDUMP;.@Y@m@d/@H/atmos/mem#member#/INPUT/</cyclestr></value></envar>
	<envar><name>FIXfv3</name><value>&FIXDIR;/fix_fv3</value></envar>

	<dependency>
		<and>
			<datadep><cyclestr>&ICSDIR;/&ECDUMP;.@Y@m@d/@H/atmos/mem#member#/INPUT/gfs_data.tile6.nc</cyclestr></datadep>
			<datadep><cyclestr>&ICSDIR;/&ECDUMP;.@Y@m@d/@H/atmos/mem#member#/INPUT/sfc_data.tile6.nc</cyclestr></datadep>
		</and>
	</dependency>

   </task>
</metatask>
