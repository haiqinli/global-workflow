SHELL=  /bin/sh
COMP=   ifort
FFLAGS= -O2 -check bounds -check format -fpe0 -axSSE4.2,AVX,CORE-AVX2

tcvital_ch_cmc:      tcvital_ch_cmc.f
	@echo " "
	@echo "  Compiling the TC vital_track program....."
	$(COMP) $(FFLAGS) tcvital_ch_cmc.f -o tcvital_ch_cmc
	@echo " "

CMD = tcvital_ch_cmc

clean:
	-rm -f  *.mod

install:
	mv $(CMD) ../../exec/$(CMD)
