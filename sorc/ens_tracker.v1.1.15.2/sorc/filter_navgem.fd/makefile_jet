SHELL=  /bin/sh
COMP=   ifort
FFLAGS= -O2 -check bounds -check format -fpe0 -axSSE4.2,AVX,CORE-AVX2

filter_gen_navgem:      filter_gen_navgem.f
	@echo " "
	@echo "  Compiling the ensemble track filter program....."
	$(COMP) $(FFLAGS) filter_gen_navgem.f -o filter_gen_navgem
	@echo " "

CMD = filter_gen_navgem

clean:
	-rm -f  *.mod

install:
	mv $(CMD) ../../exec/$(CMD)
